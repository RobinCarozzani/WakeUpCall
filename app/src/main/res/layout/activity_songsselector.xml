<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/RelativeLayout1"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="20dp">

	<Button
		android:id="@+id/songsSelectorSelectAllFilesButton"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:background="@drawable/button1shape"
		android:text="@string/songsSelectorAddAllFilesFromDirectory"
		android:textColor="#FFFFFF" />

	<TextView
		android:id="@+id/songsSelectorInstructionTextView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/songsSelectorSelectAllFilesButton"
		android:layout_marginTop="20dp"
		android:gravity="center_horizontal"
		android:text="@string/songsSelectorInstruction" />

	<TextView
		android:id="@+id/songsSelectorCurrentPath"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/songsSelectorInstructionTextView"
		android:layout_marginTop="20dp"
		android:text="" />

	<ListView
		android:id="@+id/songSelectorFilesListView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/songsSelectorDoneButton"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/songsSelectorCurrentPath"
		android:layout_marginBottom="20dp"
		android:layout_marginTop="20dp" />

	<Button
		android:id="@+id/songsSelectorDoneButton"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:background="@drawable/button2shape"
		android:text="@string/done"
		android:textColor="#FFFFFF" />

</RelativeLayout>